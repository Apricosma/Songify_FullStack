@model IEnumerable<Songify_FullStack.Models.Album>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Albums</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 p-2">
            <a href="@Url.Action("Details", "Album", new{id = item.Id})" class="text-decoration-none">
                <div class="card" style="height: 195px; width: 295px; margin-bottom: 8px">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h3 class="card-title text-xl-center" style="color: black;">@item.Title</h3>
                        <h5 class="text-xl-center" style="color: black">@item.Songs.FirstOrDefault().SongContributors.FirstOrDefault().Artist.Name</h5>
                        <p class="text-xl-center" style="color: black">Songs: @item.Songs.Count()</p>
                    </div>
                </div>
                <style>
                    .card:hover {
                        background-color: #fbfbfb;
                        box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
                        transform: translateY(-2px);
                    }
                </style>
            </a>
        </div>
    }
</div>