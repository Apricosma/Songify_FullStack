@model IEnumerable<Songify_FullStack.Models.Playlist>

@{
    ViewData["Title"] = "Playlists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Playlists</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 p-2">
            <a href="@Url.Action("Details", "Playlist", new{id = item.Id})" class="text-decoration-none" >
                <div class="card" style="height: 195px; width: 295px; margin-bottom: 8px">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h4 class="card-title text-xl-center" style="color: black;">@item.Name</h4>
                        <p class="text-xl-center" style="color: black">Songs @item.PlaylistSongs.Count()</p>
                    </div>
                </div>
                <style>
                    .card:hover {
                        background-color: #fbfbfb;
                        box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
                        transform: translateY(-2px);
                    }
                </style>
            </a>
        </div>
    }
</div>